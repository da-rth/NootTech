#include <iostream>
#include <stdio.h>

/*
 * Physics 2T - Lab 02 - C Programming
 * Exercise 2
 * Author: 2086380A
 */

int main() {
    char buffer[100];
    int bottles;
    // Use fgets and sscanf to parse number of bottles from user input as integer
    puts("How many bottles are on the wall?");
    fgets(buffer, sizeof(buffer), stdin);
    sscanf(buffer , "%d", &bottles);

    if (!bottles) {
        // If user doesn't specify an integer value, set bottles to 10
        puts("You didn't specify how many bottles are on the wall! There are now 10.");
        bottles = 10;
    }

    // Loop bottles condition whilst decrementing bottles each
    while (bottles > 0) {
        printf("%d Green Bottles, sitting on the wall.\n", bottles);
        printf("%d Green Bottles, sitting on the wall.\n", bottles);
        puts("and if 1 Green Bottle should accidentally fall...");
        bottles--;

        if (bottles > 1) {
            printf("... there'll be %d Green Bottles, sitting on the wall.\n\n", bottles);
        } else {
            // Special condition for when bottles = 0
            puts("... there'll be No Green Bottles, sitting on the wall.\n");
        }
    }

    return 0;

}